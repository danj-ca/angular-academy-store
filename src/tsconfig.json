{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "mapRoot": "./",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "../dist/out-tsc",
    "sourceMap": true, /* lets you debug ts instead of underlying js */
    "target": "es5", /* transpile target */
    "typeRoots": [
      "../node_modules/@types"
    ]
  }
}
